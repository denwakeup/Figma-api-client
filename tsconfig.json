{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2018", "dom"],
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./build",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "declaration": false,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noEmitOnError": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
